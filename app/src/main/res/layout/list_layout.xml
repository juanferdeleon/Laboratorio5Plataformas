<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">

                <TextView
                        android:background="#1C9603"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:width="200dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_marginTop="50dp"
                        android:id="@+id/nombre_producto"
                        android:text="Nombre de producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/cantidad"
                        android:text="0"
                        android:layout_marginLeft="82dp"
                        android:layout_marginBottom="47dp"
                        android:padding="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content" android:layout_marginTop="43dp"
                        android:layout_below="@+id/nombre_producto"/>

                <Button android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220dp"
                        android:layout_marginTop="75dp"
                        android:id="@+id/plus_button"
                        android:text="+"
                />

                <Button android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="75dp"
                        android:id="@+id/less_button"
                        android:text="-"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>