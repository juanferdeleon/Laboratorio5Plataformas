<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">
                <TextView
                        android:text="Nombre de Producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/nombre_producto"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/agregar"
                        android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.375"/>
                <TextView
                        android:text="Cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cantidad"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="64dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="76dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/nombre_producto"
                        app:layout_constraintVertical_bias="0.696"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/agregar"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="73dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="74dp"
                        app:layout_constraintEnd_toStartOf="@+id/restar" android:layout_marginEnd="13dp"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/restar" android:layout_marginEnd="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="74dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="73dp"
                        app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>